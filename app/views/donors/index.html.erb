<h1>Listing donors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Blood type</th>
    <th>Email</th>
    <th>Password</th>
    <th>Phone number</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @donors.each do |donor| %>
  <tr>
    <td><%= donor.name %></td>
    <td><%= donor.age %></td>
    <td><%= donor.blood_type %></td>
    <td><%= donor.email %></td>
    <td><%= donor.password %></td>
    <td><%= donor.phone_number %></td>
    <td><%= donor.latitude %></td>
    <td><%= donor.longitude %></td>
    <td><%= link_to 'Show', donor %></td>
    <td><%= link_to 'Edit', edit_donor_path(donor) %></td>
    <td><%= link_to 'Destroy', donor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

