<!-- Page Title -->
<% title "عرض طلبات التبرع" %>


<div class="request_list">


  <h1>عرض طلبات التبرع</h1>

  <div class="row browse-patients">
    
    <!-- Request Loop -->

    <% @requests.each do |request| %>

    <!-- Request item div -->

      <div class="row patient" data-equalizer>

        <!-- Due Date -->

        <div class="column large-2 due-date" data-equalizer-watch>
          <p><%= (request.due_date).strftime("%d/%m") %></p>
        </div>


       <div class="column large-10 details" data-equalizer-watch>

        <div class="row">

          <!-- Blood Type -->

           <div class="column large-6 bloodtype">
             <h2>فصيلة الدم:</h2>
             <p><%= request.blood_type %></p>
           </div>

           <!-- Blood Bags no. -->

           <div class="column large-6 bloodbags">
             <h2>عدد أكياس الدم:</h2>
             <p><%= request.blood_bags %></p>
           </div>
        </div>
       
        <div class="row">

          <!-- # of Donors -->
           <div class="column large-6">
               <h2>عدد المتبرعين:</h2>
               <p><%= request.number_of_replies %></p>
           </div>

           <!-- State of Request -->
           <div class="column large-6">
               <h2>حالة الطلب:</h2>
               <p><%= request.state %></p>
           </div>

        </div>


        <div class="row">

          <!-- Request Location -->
           <div class="column large-12 patient-location">
             <h2>المنطقة:</h2>
             <p><%= request.hospital_address %></p>
           </div>
        </div>


        <div class="row more">
          <div class="more-content">

          <!-- Link to Request page -->
           <div class="more-patient-details">
              <%= link_to "تفاصيل الحالة", request %> | 
           </div>

           <!-- Social media sharing buttons -->
           <div class="share-patient-social">
              <h2>مشاركة</h2>
             <a href=""><li class="fa fa-facebook"></li></a>
             <a href=""><li class="fa fa-twitter"></li></a>
             <a href=""><li class="fa fa-google-plus"></li></a>
           </div>
         </div>
           </div>
        </div>
      </div>
          
      <!-- Admin links to show,edit or destroy request -->
      <% if admin_signed_in? %>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>

  </div>

  <br />

  <!-- link to register a new request -->
  <div style="float:left;">
    <%= link_to 'تسجيل حالة تبرع جديدة', new_request_path %>
  </div>
</div>