<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  
  <div class="field">
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </div>

  <div class="field">
    <%= f.label :Nationalty_ID %><br>
    <%= f.text_field :ID %>
  </div>

  <div class="field">
    <%= f.label :Blood_type %><br> 
    <%= f.select :blood_type, options_for_select(["Select Blood type",["A+","A+"],["A-","A-"],
                                                ["B+","B+"],["B-","B-"],
                                                ["O+","O+"],["O-","O-"],
                                                ["AB+","AB+"],["AB-","AB-"]],@user) %>
                                                
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
