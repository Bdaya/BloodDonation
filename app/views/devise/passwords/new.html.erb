<h2>هل نسيت كلمة السر؟</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label 'البريد الالكتروني' %><br />
  <%= f.email_field :email, autofocus: true, placeholder: 'البريد الالكتروني' %></div>

  <div><%= f.submit "أرسل لي إرشادات إعادة تعيين كلمة المرور" %></div>
<% end %>

<%= render "devise/shared/links" %>

